# {{ ansible_managed }}

country_code={{ wifi_country }}
interface={{ wifi_adapter }}
driver=nl80211
ssid={{ ssid }}
hw_mode=g
channel={{ channel }}
ieee80211n=1
macaddr_acl=0
auth_algs=1
ht_capab=[HT40][SHORT-GI-20][DSSS_CCK-40]

{% if security and security.enabled and security %}
wpa=2
wpa_passphrase={{ security.psk }}
wpa_key_mgmt=WPA-PSK
wpa_pairwise=TKIP
rsn_pairwise=CCMP
{% endif %}

{% if disable_wmm %}
wmm_enabled=0
{% endif %}